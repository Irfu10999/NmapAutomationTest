{
	"info": {
		"_postman_id": "6b004b8e-5777-4d25-92f0-0a13b301eb6d",
		"name": "Nimap API Test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "26872889"
	},
	"item": [
		{
			"name": "Login - Valid data",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let resp = pm.response.json();\r",
							"pm.test(\"Response status is 200\", function () {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"if (resp.token) {\r",
							"  pm.environment.set(\"token\", resp.token);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"userid\": \"{{userid}}\",\r\n  \"password\": \"{{password}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Login _Invalid Data",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 401 or 400\", function () {\r",
							"  pm.response.to.be.oneOf([400, 401 , 405]);\r",
							"});\r",
							"let resp = pm.response.json();\r",
							"pm.test(\"Error message present\", function(){\r",
							"  pm.expect(resp.error || resp.message).to.exist;\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"userid\": \"{{userid}}\",\r\n  \"password\": \"wrongpassword\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/auth/login",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"auth",
						"login"
					]
				}
			},
			"response": []
		}
	]
}